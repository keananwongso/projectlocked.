{
  "expo": {
    "name": "ProjectLocked",
    "slug": "ProjectLocked",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "projectlocked",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.projectlocked.app",
      "infoPlist": {
        "NSCameraUsageDescription": "ProjectLocked needs camera access to capture proof photos",
        "NSPhotoLibraryUsageDescription": "ProjectLocked needs photo library access to select proof photos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.projectlocked.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ProjectLocked to access your camera for proof photos"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ProjectLocked to access your photos for proof photos"
        }
      ]
    ]
  }
}
